{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "windows": {
    "options": {
      "shell": {
        "executable": "powershell.exe"
      }
    }
  },
  "tasks": [
    {
      "label": "Package Theme",
      "type": "shell",
      "command": "vsce package -o ./dist",
      "dependsOn": [
        "Convert variables",
        "Generate colors",
        "Create dist directory"
      ],
      "problemMatcher": []
    },
    {
      "label": "Create dist directory",
      "type": "shell",
      "command": "mkdir dist",
      "problemMatcher": []
    },
    {
      "label": "Watch file changes",
      "type": "shell",
      "isBackground": true,
      "problemMatcher": [],
      "command": " node ./node_modules/nodemon/bin/nodemon --watch ase2json -x \"npm run prebuild\""
    },
    {
      "label": "Convert variables",
      "script": "convert",
      "type": "npm",
      "group": "build"
    },
    {
      "label": "Generate colors",
      "script": "generate",
      "type": "npm",
      "group": "build",
      "dependsOn": "Convert variables"
    },
    {
      "type": "npm",
      "script": "prebuild",
      "group": "build",
      "problemMatcher": [],
      "label": "npm: prebuild",
      "detail": "npm run convert && npm run generate"
    }
  ]
}

{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "colors.schema.json",
  "title": "Colors",
  "description": "Hex values",
  "type": "object",
  "additionalProperties": false,
  "required": ["colors"],
  "properties": {
    "$schema": {
      "description": "a link to a schema file",
      "type": "string"
    },
    "colors": {
      "description": "Token-color pairs",
      "type": "object",
      "patternProperties": {
        "^[A-z_0-9]+$": {
          "description": "hex values",
          "type": "string",
          "format": "color"
        }
      }
    }
  }
}
